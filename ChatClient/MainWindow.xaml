<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="41" Margin="225,10,0,0" TextWrapping="Wrap" Text="Имя пользователя" VerticalAlignment="Top" Width="559"/>
        <Button x:Name="bConDiscon" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" VerticalAlignment="Top" Width="210" Margin="10,10,0,0" Height="42"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="94" Margin="10,284,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="774" KeyDown="tbMessage_KeyDown"/>
        <ListBox  x:Name="lbChat" HorizontalAlignment="Left" Height="222" VerticalAlignment="Top" Width="774" Margin="10,57,0,0"/>
    </Grid>
</Window>
